<Window x:Class="Ded.Tutorial.Wpf.CoverFlow.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Coverflow" Width="512" Height="320" KeyDown="Window_KeyDown"
        xmlns:flow="clr-namespace:Ded.Tutorial.Wpf.CoverFlow.FlowComponent;assembly=Ded.Tutorial.Wpf.CoverFlow.FlowComponent">
  <Grid>
    <flow:FlowControl x:Name="flow" Margin="0" Width="490" Height="282" />
    <Slider Height="20" Margin="33,0,33,12" Name="slider" VerticalAlignment="Bottom" ValueChanged="slider_ValueChanged" Focusable="False" />
    <Label Content="0 KB" Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Name="perfLabel" VerticalAlignment="Top" Width="142" Foreground="Red" />
  </Grid>
</Window>
